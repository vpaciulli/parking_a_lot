<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        Entre para ter acesso a sua conta
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "article-form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: :email%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="checkmark icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation %>
          </div>
        </div>
        <br>
        <%= f.submit "Sign up", class:"ui fluid large submit button" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
